
<% if current_user %>
	<div class="table">
	  <table class="table col-xs-10">
	    <thead>
	        <tr class="date_titles">
	            <th class="category_title">Category</th>
	            <th>
	            	<% date = Time.now %>
	            	<% sunday = date.beginning_of_week(start_day = :sunday) %>
	            	<%= sunday.strftime("%A") %>
	            	<br/>
	            	<%= sunday.strftime("%b %-d, %Y") %>
	            </th>
	            <th>
	            	<% monday = sunday.advance(days: 1) %>
	            	<%= monday.strftime("%A") %>
	            	<br/>
	            	<%= monday.strftime("%b %-d, %Y") %>
	            </th>
	            <th>
	            	<% tuesday = monday.advance(days: 1) %>
	            	<%= tuesday.strftime("%A") %>
	            	<br/>
	            	<%= tuesday.strftime("%b %-d, %Y") %>
	            </th>
	            <th>
	            	<% wednesday = tuesday.advance(days: 1) %>
	            	<%= wednesday.strftime("%A") %>
	            	<br/>
	            	<%= wednesday.strftime("%b %-d, %Y") %>
	            </th>
	            <th>
	            	<% thursday = wednesday.advance(days: 1) %>
	            	<%= thursday.strftime("%A") %>
	            	<br/>
	            	<%= thursday.strftime("%b %-d, %Y") %>
	            </th>
	            <th>
	            	<% friday = thursday.advance(days: 1) %>
	            	<%= friday.strftime("%A") %>
	            	<br/>
	            	<%= friday.strftime("%b %-d, %Y") %>
	            </th>
	            <th>
	            	<% saturday = friday.advance(days: 1) %>
	            	<%= saturday.strftime("%A") %>
	            	<br/>
	            	<%= saturday.strftime("%b %-d, %Y") %>
	            </th>
	        </tr>
	        <tr class="points_sums">
	            <th class="points_title">Points</th>
	            <th>
	            	sum
	            </th>
	            <th>
	            	sum
	            </th>
	            <th>
	            	sum
	            </th>
	            <th>
	            	sum
	            </th>
	            <th>
	            	sum
	            </th>
	            <th>
	            	sum
	            </th>
	            <th>
	            	sum
	            </th>
	        </tr>
	    </thead>
	    <tbody>  
	    	<% Category.all.each do |cat| %>
	    		<tr>
	    			<%if cat.user == current_user %>
		    			<td class="category_name">
		    				<%= cat.name %>
		    			</td>
		    		<% end %>	
	    			<td>
	    				<% Task.all.each do |tsk| %>
	    					<% if tsk.date == sunday && tsk.user == current_user && tsk.category == cat %>
	    						<%= tsk.title %>
	    						<br/>
	    						<%= tsk.value %>
    						<%end%>	
						<%end%>
	    			</td>
	    			<td>
	    				<% Task.all.each do |tsk| %>
	    					<% if tsk.date == monday && tsk.user == current_user && tsk.category == cat %>
	    						<%= tsk.title %>
	    						<br/>
	    						<%= tsk.value %>
    						<%end%>	
						<%end%>
	    			</td>
	    			<td>
	    				<% Task.all.each do |tsk| %>
	    					<% if tsk.date == tuesday && tsk.user == current_user && tsk.category == cat %>
	    						<%= tsk.title %>
	    						<br/>
	    						<%= tsk.value %>
    						<%end%>	
						<%end%>
	    			</td>
	    			<td>
	    				<% Task.all.each do |tsk| %>
	    					<% if tsk.date == wednesday && tsk.user == current_user && tsk.category == cat %>
	    						<%= tsk.title %>
	    						<br/>
    						<%= tsk.value %><%end%>	
						<%end%>
	    			</td>
	    			<td>
	    				<% Task.all.each do |tsk| %>
	    					<% if tsk.date == thursday && tsk.user == current_user && tsk.category == cat %>
	    						<%= tsk.title %>
	    						<br/>
	    						<%= tsk.value %>
	    					<%end%>	
						<%end%>
	    			</td>
	    			<td>
	    				<% Task.all.each do |tsk| %>
	    					<% if tsk.date == friday && tsk.user == current_user && tsk.category == cat %>
	    						<%= tsk.title %>
	    						<br/>
	    						<%= tsk.value %>
	    					<%end%>	
						<%end%>
	    			</td>
	    			<td>
	    				<% Task.all.each do |tsk| %>
	    					<% if tsk.date == saturday && tsk.user == current_user && tsk.category == cat %>
	    						<%= tsk.title %>
	    						<br/>
	    						<%= tsk.value %>
    						<%end%>	
						<%end%>	
	    			</td>
	    		</tr>
    		<%end%>	
	    </tbody>
	  </table>
	</div>
<% else %>

<% end %>